<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- https://timesheet.odoo.com/web#id=813&cids=1&menu_id=112&action=184&active_id=2&model=project.task&view_type=form -->
    <template id="inherit_payment_printout" inherit_id="account.report_payment_receipt_document">
        <xpath expr="//div[@name='date']/div" position="after">
            <div class="col-6" t-if="o.partner_bank_id">
                Bank Acc:
                <span t-field="o.partner_bank_id.acc_number"/> - <span t-field="o.partner_bank_id.bank_id.name"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]/h3" position="replace">
            <h3><strong id="payment_title">Payment Receipt: <span t-field="o.name"/></strong></h3>
        </xpath>
        <xpath expr="//div[hasclass('row')][3]" position="after">
            <div class="oe_structure"></div>
            <div class="row">
               <div class="col-6" t-if="o.journal_id">
                    Journal:
                    <span t-field="o.journal_id.name"/><br/>
                </div>
                <div class="col-6" t-if="o.department_id">
                    Department:
                    <span t-field="o.department_id.name"/><br />
                </div>
            </div>
        </xpath>
    </template>
</odoo>