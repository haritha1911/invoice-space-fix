    <template id="custom_report_proforma_invoice_report">
        <t t-call="isha_invoice_report_format.invoice_extend_layout_proforma_invoice">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> 
            
            <div class="row">
                <div class="col-auto col-6 mw-100 mb-2">
                    <t>
